<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (now using AppCompat) -->
    <style name="Theme.EventCalc" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#C39BD3</item>
        <item name="colorPrimaryDark">#A7C7E7</item>
        <item name="colorAccent">@android:color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <!-- Splash screen theme (unchanged, still valid) -->
    <style name="Theme.EventCalc.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/gradient_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/poppers</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.EventCalc</item>
    </style>
</resources>
